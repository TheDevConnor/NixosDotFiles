{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 0,
    "modules-left": [
        // "custom/terminal",
        // "custom/ai",
        "custom/keyboard",
        "clock",
        "hyprland/window"
    ],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": [
        "backlight",
        "pulseaudio",
        "pulseaudio#microphone",
        "network",
        "bluetooth",
        "battery",
        "custom/powermenu"
    ],
    
    "custom/powermenu": {
        "format": "â»",
        "on-click": "alacritty -e wlogout",
        "signal": 8
    },
    "custom/terminal": {
        "format": "ï„ ",
        "on-click": "alacritty",
        "tooltip-format": "Terminal",
        "signal": 12
    },
    "custom/browser": {
        "format": "ï‰©",
        "on-click": "brave",
        "signal": 12
    },
    "custom/ai": {
        "format": "ï€‚",
        "on-click": "brave --app=https://www.phind.com/search?home=true",
        "tooltip": true,
        "signal": 12
    },
    "custom/keyboard": {
        "format": "ï„œ",
        "on-click": "bash ~/.config/hypr/scripts/keybindings.sh",
        "signal": 12
    },
    
    "clock": {
        "format": "{}",
        "interval": 5,
        "exec": "date +'%a %d %b %H:%M'",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "signal": 1
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["ï—", "ï—", "ï—Ÿ"],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "min-length": 6
    }, 
    "bluetooth": {
      "states": {
        "connected": true,
        "disconnected": false
      },
      "format": "{icon}",
      "format-alt": "{icon}",
      "on-click": "blueman-manager", 
      "format-icons": {
        "connected": "ïŠ“",
        "disconnected": "ïŠ”"
      },
      "scroll-step": 1
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "ï‡¦ {capacity}%",
        "format-plugged": "ï‡¦ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": [ "ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€" ]
    },
    "network": {
        "format-wifi": "{essid} ({signalStrength}%) ï‡«",
        "format-ethernet": "{ipaddr}/{cidr} ï–",
        "tooltip-format": "{ifname} via {gwaddr} ï–",
        "format-linked": "{ifname} (No IP) ï–",
        "format-disconnected": "Disconnected âš ",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "on-click": "alacritty -e sudo nmtui"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "ï€¦ Muted",
        "on-click": "pamixer -t",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ï€¥",
            "headset": "ï€¥",
            "phone": "ï‚•",
            "portable": "ï‚•",
            "car": "ï†¹",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        }
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ğŸ™{volume}%",
        "format-source-muted": "ğŸ™Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    }
}
